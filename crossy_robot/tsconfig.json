{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": [
    "e2e-test.ts",
    "simple-e2e-test.ts",
    "generate-keys.ts",
    "deployment_info.json"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
} 